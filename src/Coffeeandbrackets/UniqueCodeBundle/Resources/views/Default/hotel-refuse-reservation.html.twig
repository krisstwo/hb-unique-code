{% extends 'base.html.twig' %}
{% block body %}
    <div class="body-bg"
         style="background-image: url('https://www.happybreak.com/sites/default/files/styles/730_375/public/HOT001P03.jpg?itok=aSmgcZVH')">
        <header id="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="logo-hb">
                            {% image '@UniqueCodeBundle/Resources/public/img/header-logo.png' %}
                            <img class="logo-hb" src="{{ asset_url }}" alt="logo"/>
                            {% endimage %}
                        </div>
                    </div>
                    <div class="col-xs-6 text-right">
                        <div class="logo-partner">
                            logo-partenaire
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <section id="main">
            <div class="container">
                <div class="col-container">
                    {% include 'UniqueCodeBundle:Default:partials/hotel-reservation-header.html.twig' %}
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <p class="text-center">
                                <a class="btn btn-hb btn-lg btn-upper action-hotel-accept-reservation" href="{{ path('unique_code_accept_reservation', {'id': reservation.getId()}) }}">J’ai changé d’avis, j’accepte la
                                    réservation
                                </a>
                            </p>
                            <form id="hotel-refuse-reservation" method="post" action="{{ path('unique_code_post_hotel_refuse_reservation', {'id': reservation.getId()}) }}">
                                <p>
                                    Veuillez justifier votre refus de réservation.
                                    Votre message sera transféré directement
                                    au client.
                                </p>
                                <div class="form-group">
                                    <textarea class="form-control" id="reason" name="reason"
                                              placeholder="Motif du refus *"></textarea>
                                </div>
                                <p>
                                    Veuillez proposer une autre date à laquelle
                                    vous seriez prêt à accueillir le client
                                </p>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="check-in-date" name="check-in-date"
                                           placeholder="Date d'arrivée *">
                                </div>
                                <div class="form-group">
                                    <select id="nights" name="nights" class="form-control">
                                        <option value="" disabled selected>Je propose au client de rester</option>
                                        <option value="1">1 nuit</option>
                                        <option value="2">2 nuit</option>
                                        <option value="3">3 nuit</option>
                                    </select>
                                </div>
                                <div class="form-group has-error errors" style="display: none;">
                                    <label class="control-label">Les champs indiqués en rouge sont incomplets. Veuillez
                                        les remplir.</label>
                                </div>
                                <p class="text-center">
                                    <button type="submit" class="btn btn-hb btn-lg btn-upper">Envoyer</button>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer id="footer">
            <div class="logo">
                logo-footer
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center">
                        Tous droits réservés - <a href="#">Mentions légales</a> - <a href="#">www.happybreak.com</a> -
                        Contactez-nous au 09 80 01 01 01
                    </div>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}